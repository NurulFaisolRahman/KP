            android:name=".FileSeksi.Seksi"
            android:label="Sub Bidang"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".FileOperator.DetailSurat"
            android:label="Detail Surat"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name=".LihatSurat"
            android:label="Foto Surat"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".FileKadis.Edit_Disposisi_Kadis"
            android:label="Kadis Edit Disposisi"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".FileBidang.BidangMendisposisi"
            android:label="Bidang Mendisposisi"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
