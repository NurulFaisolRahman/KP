            android:name=".FileKadis.Disposisi_Surat"
            android:label="Disposisi Surat"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".FileBidang.Bidang"
            android:label="Bidang"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
